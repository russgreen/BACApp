<?xml version="1.0" encoding="utf-8"?>
<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:BACApp.UI.Avalonia.ViewModels"
        xmlns:views="using:BACApp.UI.Avalonia.Views"
        x:Class="BACApp.UI.Avalonia.Views.MainWindowView"        
        x:DataType="vm:MainWindowViewModel"
        x:CompileBindings="True"
        Title="{Binding WindowTitle}"
        Width="900" Height="600">

  <Grid RowDefinitions="Auto,*">
    <!-- Top bar -->
    <Grid Grid.Row="0" ColumnDefinitions="Auto,*" Margin="0,0,0,4">
      <ToggleButton Width="40" Height="32" Margin="8,4"
                    Content="â˜°"
                    ToolTip.Tip="Toggle menu"
                    IsChecked="{Binding IsPaneOpen, ElementName=MainSplitView, Mode=TwoWay}" />
      <TextBlock Grid.Column="1"
                 Margin="8,0"
                 VerticalAlignment="Center"
                 FontSize="16"
                 Text="{Binding WindowTitle}" />
    </Grid>

          <!-- Main layout with collapsible side panel -->
    <SplitView x:Name="MainSplitView"
               Grid.Row="1"
               IsPaneOpen="True"
               DisplayMode="CompactInline"
               OpenPaneLength="240"
               CompactPaneLength="48"
               PanePlacement="Left">

      <SplitView.Pane>
        <StackPanel>
            <Button Command="{Binding GoToLoginCommand}">
              <StackPanel Orientation="Horizontal" Margin="8,4">
                <TextBlock Text="ðŸ”" Margin="0,0,8,0"/>
                <TextBlock Text="Login"/>
              </StackPanel>
            </Button>

            <Button Command="{Binding GoToCalendarCommand}">
              <StackPanel Orientation="Horizontal" Margin="8,4">
                <TextBlock Text="ðŸ“…" Margin="0,0,8,0"/>
                <TextBlock Text="Calendar"/>
              </StackPanel>
            </Button>

            <Button Command="{Binding GoToLogsCommand}">
              <StackPanel Orientation="Horizontal" Margin="8,4">
                <TextBlock Text="ðŸ—’ï¸" Margin="0,0,8,0"/>
                <TextBlock Text="Logs"/>
              </StackPanel>
            </Button>

            <Button Command="{Binding GoToReportsCommand}">
              <StackPanel Orientation="Horizontal" Margin="8,4">
                <TextBlock Text="ðŸ“Š" Margin="0,0,8,0"/>
                <TextBlock Text="Reports"/>
              </StackPanel> 
              </Button>

        </StackPanel>
      </SplitView.Pane>

      <SplitView.Content>
        <!-- Load pageS here -->
        <ContentControl Content="{Binding CurrentPage}" />
        
      </SplitView.Content>
    </SplitView>
  </Grid>

</Window>