<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BACApp.App.Pages.FlightLogsPage"
             Title="Flight Logs">
    <VerticalStackLayout Padding="12" Spacing="8">
        <Entry Placeholder="Aircraft ID" Text="{Binding AircraftId}"/>
        <HorizontalStackLayout Spacing="8">
            <DatePicker Date="{Binding From}"/>
            <DatePicker Date="{Binding To}"/>
            <Button Text="Load" Command="{Binding RefreshCommand}"/>
        </HorizontalStackLayout>
        <CollectionView ItemsSource="{Binding Items}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto">
                        <Label Grid.Row="0" Grid.Column="0" Text="Route"/>
                        <Label Grid.Row="0" Grid.Column="1" Text="{Binding From} - {Binding To}"/>
                        <Label Grid.Row="1" Grid.Column="0" Text="Time"/>
                        <Label Grid.Row="1" Grid.Column="1" Text="{Binding FlightTimeHours}"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
