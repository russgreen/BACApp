<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BACApp.App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:BACApp.App.Pages"
    Title="BACApp">

    <!-- Login as initial route -->
    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate pages:LoginPage}"
        Route="Login" />

    <!-- Main tabs shown after login -->
    <TabBar Route="MainTabs">
        <Tab Title="Calendar">
            <ShellContent
                Title="Calendar"
                ContentTemplate="{DataTemplate pages:CalendarPage}"
                Route="Calendar" />
        </Tab>

        <Tab Title="Reports">
            <ShellContent
                Title="Flight Logs"
                ContentTemplate="{DataTemplate pages:FlightLogsPage}"
                Route="FlightLogs" />
            <ShellContent
                Title="Tech Logs"
                ContentTemplate="{DataTemplate pages:TechLogsPage}"
                Route="TechLogs" />
        </Tab>
    </TabBar>

</Shell>
